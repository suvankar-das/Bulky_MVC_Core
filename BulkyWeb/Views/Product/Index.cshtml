@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create a new Product
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Title</th>
            <th>ISBN</th>
            <th>Author</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(ob => ob.Id))
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.ISBN</td>
                <td>@obj.Author</td>
                <td>
                    <div class="w-60 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-productId="@obj.Id" class="mx-2 btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" class="mx-2 btn btn-outline-danger" asp-route-productId="@obj.Id">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>